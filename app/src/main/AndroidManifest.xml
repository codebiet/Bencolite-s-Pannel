<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buildathon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Buildathon">
        <activity android:name=".LikedPostsActivity"
            android:theme="@style/NoActionBar"></activity>
        <activity android:name=".SplashActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyPostActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".PostActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ViewProfile"
            android:theme="@style/NoActionBar" />
        <activity android:name=".AddRoomActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".RegisterBasicDetails" />
        <activity
            android:name=".ForgotActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".RegisterDetailsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustNothing" />
    </application>

</manifest>